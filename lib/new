#!/bin/bash

while [[ "$#" -gt "0" ]]; do
  param=$(echo $1 | cut -d "=" -f 1)
  args=$(echo $1 | cut -d "=" -f 2)
  case $param in
    --language | -l)
      # Determine language -- default to JS
    ;;
    --name | -n)
      # Assigns directory/ project/ repo name -- Default to simple_sprint
    ;;
    --origin | -o)
      # Assigns origin to git and sets up remote pushing -- Defaults to nothing
    ;;
    --time | -t)
      # Amount of time allowed for the sprint (in minutes) -- Defaults to 60
    ;;
    --frequency | -f)
      # Frequency of auto-commits for tracking progress (in minutes) -- Defaults to 10
    ;;
    *)
      # Unknown Command Error -- Displays CLI manual of valid commands
    ;;
  esac
done

assign_variables $@
